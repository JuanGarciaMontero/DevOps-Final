pipeline {
    agent any
    environment {
        POSTGRES_DB = 'ejer_final'
        POSTGRES_USER = 'juan'
        POSTGRES_PASSWORD = 'juan'
    }
    stages {
        stage('Preparación del entorno') {
            steps {
                script {
                    // Iniciar contenedor de PostgreSQL
                    docker.image('postgres:latest').withRun('-p 5432:5432 -e POSTGRES_DB=${POSTGRES_DB} -e POSTGRES_USER=${POSTGRES_USER} -e POSTGRES_PASSWORD=${POSTGRES_PASSWORD}')
                }
            }
        }
        stage('Stage crea contenedor con Python') {
            steps {
                script {
                    // Utiliza 'script' para ejecutar comandos en un bloque
                    // Dentro del contenedor Docker
                    docker.image('juangarciamontero/app13:1.0.1').inside { 

                        // Imprime información sobre la versión de Python
                        echo 'Ejecutando Python --version:'
                        sh 'python --version'

                        // Ejecuta las pruebas unitarias
                        sh 'pytest'

                        // Ejecuta pruebas con cobertura
                        sh 'pytest --cov=app'

                        // Ejecuta pruebas lintenigh
                        sh 'flake8'
                    }
                }
            }
        }
    }
    post {
        always {
            // Detener y eliminar el contenedor de PostgreSQL después de la ejecución del pipeline
            script {
                docker.image('postgres:latest').stop()
                docker.image('postgres:latest').remove(force: true)
            }
            echo "Fin del pipeline"
        }
    }
}