pipeline {
    agent any
    stages {
        stage('Stage crea contenedor con Python') {
            steps {
                script {
                    // Utiliza 'script' para ejecutar comandos en un bloque
                    // Dentro del contenedor Docker
                    docker.image('juangarciamontero/app11:1.0.1').inside { 
                        // Utiliza 'inside' para ejecutar comandos dentro del contenedor

                        // Clona el repositorio desde GitHub
                        git url: 'https://github.com/JuanGarciaMontero/DevOps-Final.git'

                        // Instala las dependencias del proyecto
                        sh 'pip install -r requirements.txt'

                        // Imprime información sobre la versión de Python
                        echo 'Ejecutando Python --version:'
                        sh 'python --version'

                        // Ejecuta las pruebas unitarias
                        sh 'pytest tests/'

                        // Ejecuta pruebas con cobertura
                        sh 'pytest --cov=app tests/'
                    }
                }
            }
        }
    }
    post {
        always {
            echo "Fin del pipeline"
        }
    }
}
